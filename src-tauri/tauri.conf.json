{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vpn9-app",
  "version": "0.1.0",
  "identifier": "com.vpn9.client",
  "build": {
    "beforeDevCommand": "trunk serve",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "trunk build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "VPN9",
        "width": 450,
        "height": 650,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "iOS": {
    },
    "linux": {
      "deb": {
        "depends": [
          "systemd"
        ],
        "files": {
          "/usr/libexec/vpn9/vpn9-daemon": "../target/release/vpn9-daemon",
          "/usr/lib/systemd/system/vpn9-daemon.service": "../packaging/linux/systemd/vpn9-daemon.service"
        },
        "postInstallScript": "../packaging/linux/scripts/deb/postinst",
        "preRemoveScript": "../packaging/linux/scripts/deb/prerm",
        "postRemoveScript": "../packaging/linux/scripts/deb/postrm"
      },
      "rpm": {
        "depends": [
          "systemd"
        ],
        "files": {
          "/usr/libexec/vpn9/vpn9-daemon": "../target/release/vpn9-daemon",
          "/usr/lib/systemd/system/vpn9-daemon.service": "../packaging/linux/systemd/vpn9-daemon.service"
        },
        "postInstallScript": "../packaging/linux/scripts/rpm/post",
        "preRemoveScript": "../packaging/linux/scripts/rpm/preun",
        "postRemoveScript": "../packaging/linux/scripts/rpm/postun"
      },
      "appimage": {
        "files": {
          "usr/libexec/vpn9/vpn9-daemon": "../target/release/vpn9-daemon",
          "usr/lib/systemd/system/vpn9-daemon.service": "../packaging/linux/systemd/vpn9-daemon.service"
        }
      }
    }
  }
}
