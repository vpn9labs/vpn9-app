#!/bin/sh
set -eu

if command -v systemctl >/dev/null 2>&1; then
  case "${1:-1}" in
    0)
      systemctl stop vpn9-daemon.service >/dev/null 2>&1 || true
      systemctl disable vpn9-daemon.service >/dev/null 2>&1 || true
      ;;
    1)
      systemctl stop vpn9-daemon.service >/dev/null 2>&1 || true
      ;;
  esac
fi

exit 0
